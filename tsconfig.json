{
  "compilerOptions": {
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "module": "commonjs",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "sourceMap": true,
    "target": "es2017",
    "esModuleInterop": true,
    "types": [ "node" ],
    "declaration": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "noUnusedLocals": true,
    "paths": {
      "@fireman/web": ["./packages/web/index.ts"],
      "@fireman/web/*": ["./packages/web/*"],
      "@fireman/admin": ["./packages/admin/index.ts"],
      "@fireman/admin/*": ["./packages/admin/*"],
    },
  },
  "compileOnSave": true,
  "include": [
    "packages",
  ],
  "exclude": ["**/dist", "node_modules", "**/*.spec.ts", "/scripts/**/*.ts"],
}