{
  "name": "@fireman/repo",
  "version": "1.0.0",
  "description": "Comprehensive firestore helper functions",
  "main": "index.js",
  "types": "index.d.ts",
  "packageManager": "pnpm@7.1.7",
  "scripts": {
    "lint": "tslint --project tsconfig.json",
    "build:packages": "pnpm run -r build",
    "prerelease:packages": "tsx ./scripts/prerelease.ts",
    "prepublish:packages": "tsx ./scripts/prepublish.ts",
    "publish:packages": "tsx ./scripts/publish.ts",
    "release" : "pnpm run clean && pnpm run prerelease:packages && pnpm run build:packages && pnpm run prepublish:packages && pnpm run publish:packages",
    "clean": "rimraf dist types packages/*/dist",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:serve": "vitepress serve docs"
  },
  "engines": {
    "node": ">=14"
  },
  "author": {
    "name": "Dylan Tientcheu",
    "email": "dylantientcheu@gmail.com",
    "url": "http://dylantientcheu.dev"
  },
  "homepage": "https://fireman-fns.netlify.app/",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "fast-glob": "^3.2.11",
    "fs-extra": "^10.1.0",
    "pnpm": "^7.5.1",
    "rimraf": "^3.0.2",
    "tsx": "^3.8.0",
    "typescript": "^4.7.4",
    "vitepress": "^1.0.0-alpha.4",
    "vue": "^3.2.37"
  },
  "dependencies": {
    "consola": "^2.15.3"
  }
}
